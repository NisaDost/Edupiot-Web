@{
    ViewData["Title"] = "Profil";
}

<div class="d-flex flex-row">

    <partial name="_InstitutionSidebar" />

    <div class="content">

        <!-- Profil Kartı -->
        <div class="bg-card p-4 mb-4">
            <div class="d-flex flex-column flex-md-row justify-content-between align-items-start">

                <!-- Okul Bilgileri -->
                <div class="w-100 w-md-75">
                    <div class="d-flex align-items-center mb-4">
                        <h1 class="fw-bold mb-0">Atatürk Ortaokulu</h1>
                        <button class="btn btn-link p-0 ms-2"><i class="material-icons text-secondary">edit_square</i></button>
                    </div>

                    <div class="row g-3">

                        <div class="col-12 col-md-6">
                            <label for="eposta" class="form-label fs-5">E-Posta</label>
                            <div class="input-group">
                                <input type="email" id="eposta" class="form-control" placeholder="ataturkoo@EduPilot_Web.com">
                                <button class="btn btn-outline-secondary"><i class="material-icons">edit_square</i></button>
                            </div>
                        </div>

                        <div class="col-12 col-md-6">
                            <label for="parola" class="form-label fs-5">Parola</label>
                            <div class="input-group">
                                <input type="password" id="parola" class="form-control" placeholder="********">
                                <button class="btn btn-outline-secondary"><i class="material-icons">edit_square</i></button>
                            </div>
                        </div>

                        <div class="col-12">
                            <label for="adres" class="form-label fs-5">Adres</label>
                            <div class="input-group">
                                <input type="text" id="adres" class="form-control" placeholder="Okul adresini giriniz...">
                                <button class="btn btn-outline-secondary"><i class="material-icons">edit_square</i></button>
                            </div>
                        </div>

                    </div>
                </div>

                <!-- Logo Bölümü -->
                <div class="text-center mt-4 mt-md-0 w-100 w-md-25">
                    <img src="~/Images/school-logo.png" alt="Okul Logosu" class="img-fluid mb-2" style="max-width: 10rem;">
                    <div>
                        <button class="btn btn-outline-secondary"><i class="material-icons">edit_square</i></button>
                    </div>
                </div>

            </div>
        </div>

        <!-- İstatistikler Kartı -->
        <div class="bg-card p-4">
            <h1 class="fw-bold text-center mb-5">İstatistikler</h1>

            <div class="row justify-content-center align-items-end g-4">

                <div class="col-12 col-sm-6 col-md-4">
                    <div class="card-primary p-4 text-center">
                        <h4>Sisteme Kayıtlı Öğrenci Sayısı</h4>
                        <h1 class="text-light mt-2">135</h1>
                    </div>
                </div>

                <div class="col-12 col-sm-6 col-md-4">
                    <div class="card-primary p-4 text-center">
                        <h4>Sisteme Kayıtlı Öğretmen Sayısı</h4>
                        <h1 class="text-light mt-2">27</h1>
                    </div>
                </div>

                <div class="col-12 col-sm-6 col-md-4">
                    <div class="card-primary p-4 text-center">
                        <h4>Kameralı Sınıf Sayısı</h4>
                        <h1 class="text-light mt-2">18</h1>
                    </div>
                </div>

            </div>
        </div>

    </div>
</div>
