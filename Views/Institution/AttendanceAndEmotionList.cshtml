@model List<EduPilot.Web.DTOs.AttendanceDTO>

@{
    ViewData["Title"] = "Yoklama ve Duygu Durumu Listesi";
}

<div class="d-flex flex-column flex-md-row">
    <partial name="_InstitutionSidebar" />
    <div class="content">
        <div class="bg-card">
            <h1 class="fw-bold">Yoklama ve Duygu Durumu Listesi</h1>

            <!-- Masaüstü Tablo Görünümü -->
            <div class="desktop-table table-responsive mt-5">
                <table class="table table-bordered table-striped">
                    <thead class="text-light" style="background-color: var(--primary-accent)">
                        <tr>
                            <th scope="col">Öğrenci Adı</th>
                            <th scope="col">Sınıfı</th>
                            <th scope="col">Ders Adı</th>
                            <th scope="col">Tarih</th>
                            <th scope="col">Duygu</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model != null && Model.Any())
                        {
                            @foreach (var attendance in Model)
                            {
                                <tr>
                                    <td>@attendance.StudentName</td>
                                    <td>@attendance.StudentGrade</td>
                                    <td>@attendance.LessonName</td>
                                    <td>@attendance.Date</td>
                                    <td>@attendance.Emotion</td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="5" class="text-center">Yoklama kaydı bulunmamaktadır.</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

            <!-- Mobil Kart Görünümü -->
            <div class="mobile-cards mt-4">
                @if (Model != null && Model.Any())
                {
                    @foreach (var attendance in Model)
                    {
                        <div class="attendance-card">
                            <div class="card-header">
                                @attendance.StudentName
                            </div>
                            <div class="card-row">
                                <span class="card-label">Sınıfı:</span>
                                <span class="card-value">@attendance.StudentGrade</span>
                            </div>
                            <div class="card-row">
                                <span class="card-label">Ders Adı:</span>
                                <span class="card-value">@attendance.LessonName</span>
                            </div>
                            <div class="card-row">
                                <span class="card-label">Tarih:</span>
                                <span class="card-value">@attendance.Date</span>
                            </div>
                            <div class="card-row">
                                <span class="card-label">Duygu:</span>
                                <span class="card-value">@attendance.Emotion</span>
                            </div>
                        </div>
                    }
                }
                else
                {
                    <div class="no-data-card">
                        Yoklama kaydı bulunmamaktadır.
                    </div>
                }
            </div>
        </div>
    </div>
</div>