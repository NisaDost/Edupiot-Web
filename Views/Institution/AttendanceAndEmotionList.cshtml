@model List<EduPilot.Web.DTOs.AttendanceDTO>

@{
    ViewData["Title"] = "Yoklama ve Duygu Durumu Listesi";
}

<div class="d-flex flex-row">

    <partial name="_InstitutionSidebar" />

    <div class="content">
        <div class="bg-card">
            <h1 class="fw-bold">Yoklama ve Duygu Durumu Listesi </h1>

            <div class="table-responsive mt-5">
                <table class="table table-bordered table-striped">
                    <thead class="text-light" style="background-color: var(--primary-accent)">
                        <tr>
                            <th scope="col">Öğrenci Adı</th>
                            <th scope="col">Sınıfı</th>
                            <th scope="col">Ders Adı</th>
                            <th scope="col">Tarih</th>
                            <th scope="col">Duygu</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model != null && Model.Any())
                        {
                            @foreach (var attendance in Model)
                            {
                                <tr>
                                    <td>@attendance.StudentName</td>
                                    <td>@attendance.StudentGrade</td>
                                    <td>@attendance.LessonName</td>
                                    <td>@attendance.Date</td>
                                    <td>@attendance.Emotion</td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="5" class="text-center">Yoklama kaydı bulunmamaktadır.</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>

    </div>

</div>
