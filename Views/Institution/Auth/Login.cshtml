@{
    ViewData["Title"] = "Kurumsal - Giriş Yap";
}

<div class="m-3">
    <div class="d-flex flex-row" style="background-color: var(--primary-accent); border-radius: 20px">
        <div class="bg-card d-flex justify-content-center w-50 p-5">
            <img src="~/Images/teacher2.png"
                 alt="Kayıt Görseli"
                 style="max-height: 100%; max-width: 50%; object-fit: contain;" />
        </div>

        <div class="card-primary-accent d-flex flex-column align-items-center justify-content-around w-50">
            <div class="title-large text-light p-3">Kurumsal Giriş</div>
            <div class="w-75">
                <div class="d-flex flex-column mb-2">
                    <label for="email" class="text-light title-regular">Kurum e-Posta</label>
                    <input type="email" id="email" name="email" placeholder="okul@ornek.edu.tr"/>
                </div>

                <div class="d-flex flex-column mb-2">
                    <label for="password" class="text-light title-regular">Parola</label>
                    <input type="password" id="password" name="password" placeholder="********" />
                </div>
            </div>
            <button class="button-secondary title-regular w-75">Giriş Yap</button>
        </div>
    </div>
</div>
