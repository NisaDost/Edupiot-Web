@{
    ViewData["Title"] = "Yayınevi - Giriş Yap";
}

<div class="m-3">
    <div class="d-flex flex-row" style="background-color: var(--primary-color); border-radius: 20px">
        
        <div class="card-primary d-flex flex-column align-items-center justify-content-around w-50" style="min-height: auto">
            <div class="title-large text-dark p-3">Yayınevi Giriş</div>
            <div class="w-75">
                <div class="d-flex flex-column mb-2">
                    <label for="email" class="text-dark title-regular">Yayınevi e-Posta</label>
                    <input type="email" id="email" name="email" placeholder="yayınevi@ornek.edu.tr"/>
                </div>

                <div class="d-flex flex-column mb-2">
                    <label for="password" class="text-dark title-regular">Parola</label>
                    <input type="password" id="password" name="password" placeholder="********" />
                </div>
            </div>
            <button class="button-secondary title-regular w-75">Giriş Yap</button>
        </div>


        <div class="bg-card d-flex justify-content-center w-50 p-5">
            <img src="~/Images/author1.png"
                 alt="yayınevi"
                 style="max-height: 100%; max-width: 50%; object-fit: contain;" />
        </div>
    </div>
</div>
