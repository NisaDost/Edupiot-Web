@model EduPilot_Web.Models.DTOs.PublisherRegisterDTO

@{
    ViewData["Title"] = "Yayınevi - Kayıt Ol";
}

<div class="m-3">
    <div class="d-flex flex-row" style="background-color: var(--primary-color); border-radius: 20px">
        <div class="card-primary d-flex flex-column align-items-center justify-content-around w-50">
            <div class="title-large text-dark p-3">Yayınevi Kayıt</div>

            <form asp-action="RegisterSubmit" asp-controller="Publisher" method="post" class="w-75">
                @Html.AntiForgeryToken()
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="d-flex flex-column mb-2">
                    <label asp-for="Name" class="text-dark title-regular"></label>
                    <input asp-for="Name" class="form-control" placeholder="EduPilot Yayınları" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>

                <div class="d-flex flex-column mb-2">
                    <label asp-for="Email" class="text-dark title-regular"></label>
                    <input asp-for="Email" type="email" class="form-control" placeholder="yayinevi@ornek.com" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>

                <div class="d-flex flex-column mb-2">
                    <label asp-for="Password" class="text-dark title-regular"></label>
                    <input asp-for="Password" type="password" class="form-control" placeholder="********" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>

                <div class="d-flex flex-column mb-2">
                    <label class="text-dark title-regular">Parola (Tekrar)</label>
                    <input type="password" class="form-control" placeholder="********" />
                </div>

                <div class="d-flex flex-row align-items-center mb-1">
                    <input type="checkbox" class="me-1" />
                    <label class="text-dark">KVKK Metnini okudum, onaylıyorum.</label>
                </div>

                <div class="d-flex flex-row align-items-center mb-3">
                    <input type="checkbox" class="me-1" />
                    <label class="text-dark">Aydınlatma Metnini okudum, onaylıyorum.</label>
                </div>

                <button type="submit" class="button-secondary title-regular w-100 mb-4">Kayıt Ol</button>
            </form>
        </div>

        <div class="bg-card d-flex justify-content-center align-items-center w-50 p-5">
            <img src="~/Images/author1.png" alt="Kayıt Görseli" style="max-height: 100%; max-width: 50%; object-fit: contain;" />
        </div>
    </div>
</div>
