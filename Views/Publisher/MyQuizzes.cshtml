@model List<EduPilot.Web.DTOs.QuizDTO>
@{
    ViewData["Title"] = "Quizlerim";
}

<div class="d-flex flex-row">
    <partial name="_PublisherSidebar" />

    <div class="content">
        <div class="bg-card">
            @foreach (var quiz in Model)
            {
                <div class="card quiz-card mb-3 p-3 shadow-sm" style="cursor:pointer;" onclick="location.href='@Url.Action("Detail", "Publisher", new { id = quiz.Id })'">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h5>@quiz.SubjectName</h5>
                            <p class="mb-1">Soru Sayısı: <strong>@quiz.QuestionCount</strong></p>
                            <p class="mb-1">Süre: <strong>@quiz.Duration dakika</strong></p>
                        </div>
                        <div class="text-end">
                            <div class="form-check form-switch mb-2">
                                <input class="form-check-input toggle-active" type="checkbox"
                                       data-id="@quiz.Id" @(quiz.IsActive ? "checked" : "")>
                                <label class="form-check-label">Aktif</label>
                            </div>
                            <a href="@Url.Action("EditQuiz", "Publisher", new { id = quiz.Id })" class="btn btn-sm btn-outline-primary">Düzenle</a>
                        </div>
                    </div>
                </div>
            }

        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(".toggle-active").on("change", function () {
            const quizId = $(this).data("id");
            const isActive = $(this).is(":checked");

            $.ajax({
                url: "/Publisher/SetQuizState",
                type: "POST",
                data: { id: quizId, isActive },
                success: function () {
                    console.log("Aktiflik güncellendi.");
                },
                error: function () {
                    alert("Aktiflik durumu güncellenemedi.");
                }
            });
        });
    </script>
}
