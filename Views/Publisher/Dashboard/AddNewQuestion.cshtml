@{
    ViewBag.Title = "Yeni Soru Ekle";
}

<div class="d-flex flex-row">
    <partial name="_PublisherSidebar"/>

    <div class="container content bg-card">
        <h2 class="mb-4 text-center">Yeni Soru Ekle</h2>

        <form>
            <div class="row mb-3">
                <div class="col-md-4">
                    <label for="gradeLevel" class="form-label">Sınıf Seviyesi Seçin</label>
                    <select class="form-select" id="gradeLevel">
                        @for (int i = 1; i <= 12; i++)
                        {
                            <option>@i. Sınıf</option>
                        }
                    </select>
                </div>

                <div class="col-md-4">
                    <label for="lesson" class="form-label">Ders Seçin</label>
                    <select class="form-select" id="lesson">
                        <option>Matematik</option>
                        <option>Fen Bilimleri</option>
                        <option>Tarih</option>
                        <option>Türkçe</option>
                        <option>İngilizce</option>
                    </select>
                </div>

                <div class="col-md-4">
                    <label for="subject" class="form-label">Konu Seçin</label>
                    <select class="form-select" id="subject">
                        <option>Geometri</option>
                        <option>Kimya</option>
                        <option>Osmanlı Tarihi</option>
                        <option>Yazım Kuralları</option>
                        <option>Gramer</option>
                    </select>
                </div>
            </div>

            <div class="mb-3">
                <label for="questionText" class="form-label">Soru Metni</label>
                <textarea class="form-control" id="questionText" rows="4" placeholder="Soru metnini buraya girin..."></textarea>
            </div>

            <div class="mb-3">
                <label for="questionImage" class="form-label">Görsel Yükle (Opsiyonel)</label>
                <input class="form-control" type="file" id="questionImage" accept="image/*">
            </div>

            <div class="mb-3">
                <label class="form-label" style="color: green; font-weight: bold;">Doğru Cevabı Girin</label>
                <input type="text" class="form-control border-success" placeholder="Doğru cevabı buraya yazın...">
            </div>

            <div class="mb-3">
                <label class="form-label" style="color: red; font-weight: bold;">Yanlış Cevapları Girin</label>
                <input type="text" class="form-control mb-2 border-danger" placeholder="Yanlış cevap 1">
                <input type="text" class="form-control mb-2 border-danger" placeholder="Yanlış cevap 2">
                <input type="text" class="form-control border-danger" placeholder="Yanlış cevap 3">
            </div>

            <div class="d-grid gap-2">
                <button type="submit" class="btn btn-primary btn-lg">Ekle</button>
            </div>
        </form>
    </div>
</div>
