@{
    ViewData["Title"] = "Profil";
}

<div class="d-flex flex-row">

    <partial name="_PublisherSidebar" />

    <div class="content p-4">

        <!-- Publisher Profil Kartı -->
        <div class="bg-card p-4 mb-4">
            <div class="d-flex flex-column flex-md-row justify-content-between align-items-start">

                <!-- Yayıncı Bilgileri -->
                <div class="w-100 w-md-75">
                    <div class="d-flex align-items-center mb-4">
                        <h1 class="fw-bold mb-0">İthaki Yayınları</h1>
                        <button class="btn btn-link p-0 ms-2"><i class="material-icons text-secondary">edit_square</i></button>
                    </div>

                    <div class="row g-3">

                        <div class="col-12 col-md-6">
                            <label for="publisher-email" class="form-label fs-5">E-Posta</label>
                            <div class="input-group">
                                <input type="email" id="publisher-email" class="form-control" placeholder="publisher@example.com">
                                <button class="btn btn-outline-secondary"><i class="material-icons">edit_square</i></button>
                            </div>
                        </div>

                        <div class="col-12 col-md-6">
                            <label for="publisher-password" class="form-label fs-5">Parola</label>
                            <div class="input-group">
                                <input type="password" id="publisher-password" class="form-control" placeholder="********">
                                <button class="btn btn-outline-secondary"><i class="material-icons">edit_square</i></button>
                            </div>
                        </div>

                        <div class="col-12">
                            <label for="publisher-address" class="form-label fs-5">Adres</label>
                            <div class="input-group">
                                <input type="text" id="publisher-address" class="form-control" placeholder="Yayıncı adresi giriniz...">
                                <button class="btn btn-outline-secondary"><i class="material-icons">edit_square</i></button>
                            </div>
                        </div>

                    </div>
                </div>

                <!-- Logo Bölümü -->
                <div class="text-center mt-4 mt-md-0 w-100 w-md-25">
                    <img src="~/Images/publisher-logo.png" alt="Publisher Logo" class="img-fluid mb-2" style="max-width: 10rem;">
                    <div>
                        <button class="btn btn-outline-secondary"><i class="material-icons">edit_square</i></button>
                    </div>
                </div>

            </div>
        </div>

        <!-- İstatistik Kartı -->
        <div class="bg-card p-4">
            <h1 class="fw-bold text-center mb-5">İstatistikler</h1>

            <div class="row justify-content-center g-4">

                <div class="col-12 col-sm-8 col-md-6">
                    <div class="card-primary p-4 text-center">
                        <h4>Bugüne Kadar Eklenen Soru Sayısı</h4>
                        <h1 class="text-light mt-2">568</h1>
                    </div>
                </div>

            </div>
        </div>

    </div>
</div>
